<%= simple_form_for([project, ticket]) do |f| %>

	<% if ticket.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(ticket.errors.count, "error") %> prohibit this error from being saved:
			</h2>

			<ul>
				<% ticket.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.input :name %>
	<%= f.input :description %>

	<%= f.button :submit, class: "btn-primary" %>
<% end %>

<%= link_to "Back to " + @project.name, project_path(@project) %>